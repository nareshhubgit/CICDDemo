<aura:component controller="Hub" implements="force:appHostable,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="hubsList" type="Hub__c[]"/>
    <article class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span class="slds-icon_container slds-icon-standard-account" title="description of icon when needed">
                        <lightning:icon iconName="standard:account" size="large" alternativeText="List Hubs"/>
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2>
                        <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Hubs">
                            <span class="slds-text-heading_small">Hubs</span>
                        </a>
                    </h2>
                </div>
            </header>
        </div>
        <div class="slds-card__body">
            <table class="slds-table slds-table_bordered slds-no-row-hover slds-table_cell-buffer">
                <thead>
                    <tr class="slds-text-title_caps">
                        <th scope="col">
                            <div class="slds-truncate" title="Name">Name</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="State">State</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="Rating">Rating</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="Active">Active</div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <aura:iteration items="{!v.hubsList}" var="hubs"> <!-- iteration account record.-->
                        <tr class="{!hubs.style_class__c}">
                            <th scope="row">
                                <div class="slds-truncate" title="{!hubs.Name}">{!hubs.Name}</div>
                            </th>
                            <td>
                                <div class="slds-truncate" title="{!hubs.State_c}">{!hubs.State_c}</div>
                            </td>
                            <td>
                                <div class="slds-truncate" title="{!hubs.Rating_c}">{!hubs.Rating_c}</div>
                            </td>
                            <td>
                                <div class="slds-truncate" title="{!hubs.Active_c}">{!hubs.style_class_c}</div>
                            </td>
                        </tr>                     
                    </aura:iteration>
                </tbody>
            </table>
        </div>
    </article>
</aura:component>